{
  "name": "lsp-for-freemarker",
  "displayName": "Freemarker Template Language Support",
  "description": "Freemarker Template Language Support for Visual Studio Code",
  "publisher": "nokia",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.98.0"
  },
  "license": "BSD-3-Clause",
  "keywords": [
    "freemarker",
    "lsp",
    "rust",
    "grammar"
  ],
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js --external:vscode",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build-server-and-client": "cd ../.. && cargo build && cd clients/vsce && npm run compile"
  },
  "main": "./dist/index.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ftl",
        "aliases": [
          "FTL",
          "ftl"
        ],
        "extensions": [
          ".ftl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "category": "Freemarker",
        "command": "freemarker.restart",
        "title": "Restart Language Server"
      }
    ]
  },
  "configurationDefaults": {
    "[ftl]": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "ftlLanguageClient.trace.server": "verbose",
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  }
}